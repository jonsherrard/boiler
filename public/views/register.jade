extends layout

block content
  .row.vertical-offset-100
    .col-md-4.col-md-offset-4
      h1 Register for #{appName}
  .row.verical-offset-100
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3.panel-title Enter your details below:
        .panel-body
          form(accept-charset='UTF-8', role='form', data-parsley-validate, novalidate)#register-form
            fieldset
              .form-group
                label.form-label(for='email') Email
                input.form-control(placeholder='E-mail',
                  name='email',
                  type='email',
                  required
                )
              .form-group
                labael.form-label(for='password') Password
                input.form-control#reg-password(
                  placeholder='Password',
                  name='password',
                  type='password',
                  value='',
                  required,
                  data-parsley-minlength="6"
              )
              .form-group
                labael.form-label(for='passwordConfirm') Confirm Password
                input.form-control(placeholder='Confirm Password',
                name='passwordConfirm',
                type='password',
                value='',
                required,
                data-parsley-equalTo="#reg-password"
              )
              .checkbox
                label
                  input(name='remember', type='checkbox', value='Remember Me')
                  | Remember Me
              .row
                .col-md-4.col-md-offset-4
                  input.btn.btn-default.btn-block(type='submit', value='Register')
