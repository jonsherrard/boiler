extends layout

block content
  .row.vertical-offset-100
    .col-md-4.col-md-offset-4
      h1 Register for #{appName}
  .row.verical-offset-100
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3.panel-title Enter your details below:
        .panel-body
          form#register-form(
            accept-charset='UTF-8',
            role='form',
            data-parsley-validate,
            novalidate,
            method="POST"
          )
            fieldset
              .form-group
                label.form-label(for='firstName') First Name
                input.form-control(placeholder='First Name',
                  name='firstName',
                  type='text',
                  required
                )
              .form-group
                label.form-label(for='lastName') Last Name
                input.form-control(placeholder='Last Name',
                  name='lastName',
                  type='text',
                  required
                )
              .form-group
                label.form-label(for='email') Email
                input.form-control(placeholder='E-mail',
                  name='email',
                  type='email',
                  required,
                )
              .form-group
                labael.form-label(for='password') Password
                input.form-control#reg-password(
                  placeholder='Password',
                  name='password',
                  type='password',
                  data-parsley-minlength="6",
                  required
              )
              .form-group
                labael.form-label(for='passwordConfirm') Confirm Password
                input.form-control(placeholder='Confirm Password',
                name='passwordConfirm',
                type='password',
                data-parsley-equalTo="#reg-password",
                required 
              )
              .row
                .col-md-4.col-md-offset-4
                  input.btn.btn-default.btn-block(type='submit', value='Register')
